@using CrudApplication.Models.ViewModel
@model ImageCreateModel
@{
    ViewData["Title"] = "UploadImage";
}

<div class="container">
    <div class="row">
        <div class="col-6 offset-3">
            <form method="post" asp-action="UploadImage" enctype="multipart/form-data">
                <div class="form-group">
                    <label asp-for="Name"></label>
                    <input type="text" asp-for="Name" class="form-check" placeholder="enter name" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ImagePath"></label>
                    <input type="file" asp-for="ImagePath" class="form-check" />
                    <span asp-validation-for="ImagePath" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="SAVE" class="btn btn-sm btn-primary float-right" />
                </div>
            </form>
        </div>
    </div>
</div>
